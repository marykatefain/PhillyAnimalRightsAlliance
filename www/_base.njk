<!DOCTYPE html>
<html lang="en">
<head>
  <title>Philly Animal Rights Alliance</title>

  <!-- Meta -->
  <meta name="description" content="A coalition for animal liberation.">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  <meta name="theme-color" content="#E45700">
  <meta name="msapplication-config" content="/browserconfig.xml">
  <link rel="shortcut icon" href="./assets/images/favicon.ico" type="image/x-icon">


  <!-- Open Graph protocol -->
  <meta property="og:title" content="Philly Animal Rights Alliance">
  <meta property="og:type" content="website">
  <meta property="og:url" content="http://phillyara.surge.sh/calendar">
  <meta property="og:image" content="http://phillyara.surge.sh/assets/images/logo-draft-inverted.png">
  <meta property="og:description" content="A coalition for animal liberation.">
  <meta property="og:locale" content="en_US">

  <!-- stylesheet -->
  <link rel="stylesheet" href="/assets/styles/style.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat|Open+Sans" rel="stylesheet">

  <!--font awesome-->
  <script src="https://use.fontawesome.com/f0f88dce11.js"></script>

  <!-- Calendar stuff -->
  <link rel='stylesheet' href='./fullcalendar/fullcalendar.css' />
  <script src='./fullcalendar/lib/jquery.min.js'></script>
  <script src='/fullcalendar/lib/moment.min.js'></script>
  <script src='./fullcalendar/fullcalendar.js'></script>
  <script>
  $(document).ready(function() {

    // page is now ready, initialize the calendar...

    $('#calendar').fullCalendar({
      // put your options and callbacks here
      events: './data.json'
    })
  });
  </script>
</head>

<body class="{{ current.source }}">
  <header>

    <div class="topnav">
        <div class="logo">
          <a href="/"><img src="./assets/images/logo-inverted-transparent.png"></a>
          <span class="mobile-only"><h1>Philly Animal Rights Alliance<h1></span>
        </div>

        <div class="menu">
          <nav>
            <a {% if current.source == 'index' %} class="active"{% endif %} href="/">Home</a>
            <a {% if current.source == 'about' %} class="active"{% endif %} href="/about">About</a>
            <a {% if current.source == 'campaigns' %} class="active"{% endif %} href="/campaigns">Campaigns</a>
            <a {% if current.source == 'calendar' %} class="active"{% endif %} href="/calendar">Calendar</a>
            <a {% if current.source == 'resources' %} class="active"{% endif %} href="/resources">Resources</a>
          </nav>
          <div class="button" id="updates" onclick="showDiv()">Get Updates!</div>
        </div>

        <div class="form_div" id="hidden_form">
          <h3>Subscribe to Updates</h3>
          <form target="transFrame" action="https://docs.google.com/forms/d/e/1FAIpQLSdc7O_TfYuqUOPm5D5O65b9RMjQtmFtOh0HWSxlBpB2OBO99Q/formResponse" method="POST">
            <label for="entry.1923990243">Name:</label>
            <input type="text" name="entry.1923990243"><br><br>
            <label for="entry.1795929851">E-mail:</label>
            <input type="text" name="entry.1795929851"><br><br>
            <input class="button" type="submit" value="Send" onclick="hideDiv()">
          </form>
          <div class="close" onclick="hideDiv()"><p>Close</p></div>
          <iframe style="display: none;" name="transFrame" id="transFrame"></iframe>
        </div>

      </div>

      <div class = "pagebanner">
        {% block title %}{% endblock %}
      </div>

    </header>


    <div class="content">
      {% block content %}{% endblock %}
    </div>

    <footer>
